#include <graphics.h>
#include <stdio.h>
#include <conio.h>
void main()
{
    int gd = DETECT, gm;
    initgraph(&gd, &gm, "C:\\Turboc3\\BGI");
    // Define your object points here
    int x1 = 100, y1 = 100, x2 = 200, y2 = 200;
    float sx = 1.5, sy = 0.5; // Scaling factors
    // Draw the original object
    rectangle(x1, y1, x2, y2);
    getch();
    // Scale the object
    x1 = x1 * sx;
    x2 = x2 * sx;
    y1 = y1 * sy;
    y2 = y2 * sy;
    // Draw the scaled object
    rectangle(x1, y1, x2, y2);
    getch();
    closegraph();
}